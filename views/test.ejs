<!DOCTYPE HTML>
<html>
  <head>
    <title>
      <%=title%>
    </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="scripts/test.js"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <!-- Fixed navbar -->
    <%- include('navbar', {title: title}) %>
    <!-- End of navbar -->

    <div class="container-full">
      <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10 panel panel-default">
          <div class="panel-heading"></div>
          <div class="row panel-body text-center equal-test">
            <div class="col-xs-2">
              <div onclick="prevQuestion()" class="centralize arrow-left">
              </div>
            </div>
            <div class="col-xs-8" id="questionDescription">
            </div>
            <div class="col-xs-2">
              <div onclick="nextQuestion()" class="centralize arrow-right">
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-1"></div>
      </div>
      <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-sm-2">
            <button type="button" onclick="setAnswer(1)" class="test-btn text-center btn-no-padding" id="activityOption1">Not at all</button>
        </div>
        <div class="col-sm-2">
            <button type="button" onclick="setAnswer(2)" class="test-btn text-center btn-no-padding" id="activityOption2">Rarely</button>
        </div>
        <div class="col-sm-2">
            <button type="button" onclick="setAnswer(3)" class="test-btn text-center btn-no-padding" id="activityOption3">Sometimes</button>
        </div>
        <div class="col-sm-2">
            <button type="button" onclick="setAnswer(4)" class="test-btn text-center btn-no-padding" id="activityOption4">Often</button>
        </div>
        <div class="col-sm-2">
            <button type="button" onclick="setAnswer(5)" class="test-btn text-center btn-no-padding" id="activityOption5">Very often</button>
        </div>
        <div class="col-xs-1"></div>
    </div>
    <%- include('footer') %>
  </body>
</html>

<script>
  initTest();
</script>

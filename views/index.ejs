<!DOCTYPE HTML>
<html>
  <head>
    <title>
      <%=title%>
    </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script type="text/javascript" src="scripts/dataContainer.js"></script>
    <script type="text/javascript" src="scripts/index.js"></script>
    <script src="scripts/raphael-2.1.4.min.js"></script>
    <script src="scripts/justgage.js"></script>
  </head>
  <body>
    <!-- Fixed navbar -->
    <%- include('navbar', {title: title}) %>
    <!-- End of navbar -->
    <div class="">

      <div class="col-sm-4">
        <div class="panel panel-default">
          <div class="panel-heading text-center noselect"><h2>Levels</h2></div>
          <div class="row panel-body equal">
            <!-- rocket -->
            <div class="col-xs-5 rocket-container">
              <center>
                <div class="moon"></div>
                <div class="earth"></div>
                <div id="rocket" class="rocket"></div>
              </center>
            </div>
            <!-- Level -->
            <div class="col-xs-7" id="levelColumn">
            </div>
          </div>
        </div>
      </div>

      <!-- Moduli -->
      <div class="col-sm-4">
        <div class="row">
          <div class="col-sm-1"></div>
          <div class="col-sm-10 panel panel-default">
            <div class="panel-heading  noselect">

                <div class="row text-center">
                  <h2>
                    <div class="col-xs-2 col-xs-2-no-padding">
                      <div type="button" onclick="decreaseLevel()" class="modules-arrow-down"></div>
                    </div>
                    <div class="col-xs-8">
                      <span class="modules-title" id="modulesTitle"></span>
                    </div>
                    <div class="col-xs-2 col-xs-2-no-padding">
                      <div type="button" onclick="increaseLevel()" class="modules-arrow-up"></div>
                    </div>
                  </h2>
                </div>

            </div>

            <div class="list-group panel-body" id="modulesList">
            </div>
          </div>

          <div class="col-sm-1"></div>
        </div>
        <div class="row">
          <div class="col-sm-1">
          </div>
          <div class="col-sm-10 panel panel-default">
            <div class="panel-heading text-center noselect">
              <h2>Progress</h2>
            </div>
            <div class="panel-body text-center">
              <div class="progress-text"  id="progressBarText"></div>
              <div class="progress incomplete-progress-bar-modules text-center">
                <div class="progress-bar progress-bar-modules" role="progressbar" id="progressBarWidth">
                </div>
                <span class="percentage"  id="progressBarPerc"></span>
              </div>
            </div>
          </div>

          <div class="col-sm-1">
          </div>
        </div>

        <div class="col-sm-1"></div>
      </div>
      <!-- chiude colonna centrale -->

      <!-- Leaderboard and test -->
      <div class="col-sm-4">
        <div class="panel panel-default">
          <div class="panel-heading text-center noselect">
            <h2>Leaderboard</h2>
          </div>
          <div class="panel-body leaderboard-container">
            <ul class="leaderboard list-group">
              <% for(var i=0;i<10;i++) {%>
                <li class="list-group-item leaderboard-entry">
                  <a href="#profile" class="">
                      <div class="leaderboard-image profile-image-container rounded-container img-circle">
                        <img class="" src="http://broscience.co/wp-content/uploads/2015/03/big-lenny-7.jpg" class="rounded" />
                      </div>
                      <div class="leaderboard-position"><%=i+1%>.</div><div class="leaderboard-inline-name" id="leaderboardName<%=i%>"></div>
                      <div class="leaderboard-inline-points" id="leaderboardPoints<%=i%>"></div>
                  </a>
                </li>
              <%}%>
            </ul>

          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading text-center noselect">
            <h2>Bravometer</h2>
          </div>
          <div class="row panel-body">
            <div id="bravometer" class="bravometer"></div>
            <a href="/test" class="test-btn col-xs-12">Take the test!</a>
          </div>
        </div>
      </div>
      </div>
    </div>

    <script type="text/javascript" src="scripts/bravometer.js"></script>
    <%- include('footer') %>
  </body>
</html>

<script>
  makeLevelColumn();
  changeMiddleColumn(level);
  initProgressBar();
  makeLeaderboard();
</script>

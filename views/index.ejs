<!DOCTYPE HTML>
<html>
  <head>
    <title>
      <%=title%>
    </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script type="text/javascript" src="scripts/index.js"></script>
    <script src="scripts/raphael-2.1.4.min.js"></script>
    <script src="scripts/justgage.js"></script>

    <script> init(); </script>

  </head>
  <body>
    <!-- Fixed navbar -->
    <%- include('navbar', {title: title}) %>
    <!-- End of navbar -->
    <div class="">

      <div class="col-sm-4">
        <div class="well well-levels">
          <h2 class="text-center">Levels</h2>
          <div class="row equal">
            <!-- rocket -->
            <div class="col-xs-5 rocket-container">
              <center>
                <div class="moon"></div>
                <div class="earth"></div>
                <div id="rocket" class="rocket"></div>
              </center>
            </div>
            <!-- Level -->
            <div class="col-xs-7" id="levelColumn">
            </div>
          </div>
        </div>
      </div>

      <!-- Moduli -->
      <div class="col-sm-4">
        <div class="row">
          <div class="col-sm-2"></div>
          <div class="col-sm-8 well well-modules">
            <div>
              <div class="row">
                <div class="col-xs-2">
                  <button type="button" onclick="decreaseLevel()" class="btn btn-block btn-arrow"><span class="glyphicon glyphicon-menu-left modules-arrow"></span></button>

                </div>
                <div class="col-xs-8">
                  <span class="modules-title" id="modulesTitle"></span>
                </div>
                <div class="col-xs-2">
                  <button type="button" onclick="increaseLevel()" class="btn btn-block btn-arrow"><span class="glyphicon glyphicon-menu-right modules-arrow"></span></button>

                </div>
              </div>
            </div>
            <!--
            <button type="button" class="btn"><span class="glyphicon glyphicon-menu-left modules-arrow"></span></button>
            <button type="button" class="btn"><span class="modules-title" id="modulesTitle"></span></button>
            <button type="button" class="btn"><span class="glyphicon glyphicon-menu-right modules-arrow"></span></button>
            -->
            <!-- modules -->
            <div class="list-group" id="modulesList">
            </div>
          </div>

          <div class="col-sm-2"></div>
        </div>

        <div class="row">
          <div class="col-sm-1"> </div>

          <div class="col-sm-10">
            <div align="center" id="progressBarText"></div>
            <div class="progress incomplete-progress-bar-modules">
              <div class="progress-bar progress-bar-modules" role="progressbar" id="progressBarPerc">
              </div>
            </div>
          </div>

          <div class="col-sm-1"></div>
        </div>

        <div class="col-sm-1"></div>
      </div>

      <script> makeLevelColumn(); changeMiddleColumn(level); initProgressBar(); </script>
      <!-- chiude colonna centrale -->

      <!-- Leaderboard and test -->
      <div class="col-sm-4">
        <div class="well well-leaderboard">
          <div class="row">
            <h2 class="text-center">Leaderboard</h2>
            <div class="leaderboard-container">
              <ul class="leaderboard list-group">
                <% for(var i=0;i<10;i++) {%>
                  <li class="list-group-item leaderboard-entry">
                    <a href="#profile" class="">
                        <div class="leaderboard-image profile-image-container rounded-container img-circle">
                          <img class="" src="http://broscience.co/wp-content/uploads/2015/03/big-lenny-7.jpg" class="rounded" />
                        </div>
                        <div class="leaderboard-position"><%=i+1%>.</div><div class="leaderboard-inline-name">Big&nbsp;Lenny</div>
                        <div class="leaderboard-inline-points">1337 Pt.</div>
                    </a>
                  </li>
                <%}%>
              </ul>
            </div>
          </div>
        </div>
          <div class="well well-leaderboard well-bravometer row">
            <div id="bravometer" class="bravometer"></div>
            <a href="/test" class="test-btn col-xs-12">Take the test!</a>
          </div>
      </div>
      </div>
    </div>

    <script type="text/javascript" src="scripts/bravometer.js"></script>
    <%- include('footer') %>
  </body>
</html>
